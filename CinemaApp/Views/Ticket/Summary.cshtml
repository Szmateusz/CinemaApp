@model TicketInfoViewModel
@{
}
<h1 class="text-center">Podsumowanie</h1>

<h3 class="text-green">Zakup wykonany pomyślnie</h3>
<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Rząd</th>
                    <th>Miejsce</th>
                    <th>Cena</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td>@ticket.Row</td>
                        <td>@ticket.Place</td>
                        <td>@ticket.Price</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Film</th>
                    <th>Sala</th>
                    <th>Data</th>

                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>@Model.Schedule.Movie.Title</td>
                    <td>@Model.Schedule.Hall.HallName</td>
                    <td>@Model.Schedule.Date</td>

                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <tr>

                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Email</th>
                    <th>Telefon</th>


                </tr>
            </thead>
            <tbody>
                <tr>

                    <td>@Model.Customer.FirstName</td>
                    <td>@Model.Customer.LastName</td>
                    <td>@Model.Customer.Email</td>
                    <td>@Model.Customer.Phone</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="dowloadTicket">

</div>